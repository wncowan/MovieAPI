    <h1 class="text-center">Search for a movie by title:</h1>
    <form id="searchForm">
        <div class="input-group">
            <input name="search" class="form-control" id="searchValue" type="text"/>
            <button class="btn btn-primary" id="searchBtn" type="button">Search</button>
        </div>
    </form>
    <div id="error"></div>
    <table class="table">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Release Date</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>